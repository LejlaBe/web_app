@model Portal.Data.ViewModels.Report.ReportUserViewModel
@{
    ViewData["Title"] = "Report";
}
    <h1 style="text-align:center">Employee report</h1>
<hr />
<br />
<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="col-md-12">
        <form asp-action="Print">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="col-md-6 shadow-lg  mb-5 bg-white rounded" style="margin:auto;">
                    <br /><br />
                     <div class="form-group">
                        @Html.LabelFor(model => model.Id, new { @class = "control-label col-md-4 col-sm-3" })
                        @Html.DropDownListFor(model => model.Id, new SelectList(Model.Users, "Id", "UserName"), "-", new { @Class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Id, "", new { @class = "text-danger" })
                    </div>
                    <div class="button-group fa-pull-right" style="margin-left:15px;">
                        <button type="submit" value="Create" class="btn btn-primary">Submit</button>
                        <a type="button" asp-action="Index" asp-controller="Home" class="btn btn-secondary">Cancel</a>

                    </div>
                    <br /><br />
                </div>
            </div>
        </form>
    </div>
</div>