@using Portal.Data.ViewModels
@model UserRoleViewModel
<div class="row">
    <div class="col-md-6 offset-md-3">
        <h2>Delete user from role</h2>
        <form asp-controller="Admin" asp-action="DeleteUserFromRole">
            <input type="hidden" name="roleId" value="@Model.RoleId" />
            <div class="form-group">
                <select asp-for="UserId"
                        asp-items="@(new SelectList(Model.Users, "Id", "Text"))" class="custom-select">
                    <option>Please select a user</option>
                </select>
            </div>
            <div class="form-group">
                <input class="btn btn-primary" value="Remove from role" type="submit" />
                <a asp-action="RoleManagement" class="btn btn-primary">Done</a>
            </div>
        </form>
    </div>
</div>
